{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"]
}
